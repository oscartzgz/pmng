<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Equipos telef√≥nicos</h1>
    </div>
    <div class="col-lg-6 text-right">
      <%= link_to 'Gestionar lineas', phone_lines_path, class: 'btn btn-secondary' %>
      <%= link_to '+ Nuevo Dispositivo', new_phone_device_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Sku</th>
        <th>Value</th>
        <th>Status</th>
        <th>Observations</th>
        <th>Assignment</th>
        <th>Quantity</th>
        <th>Imei</th>
        <th>Phone line</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @phone_devices.each do |phone_device| %>
        <tr>
          <td><%= phone_device.brand %></td>
          <td><%= phone_device.model %></td>
          <td><%= phone_device.sku %></td>
          <td><%= phone_device.value %></td>
          <td><%= phone_device.status %></td>
          <td><%= phone_device.observations %></td>
          <td><%= phone_device.assignment %></td>
          <td><%= phone_device.quantity %></td>
          <td><%= phone_device.IMEI %></td>
          <td><%= phone_device.phone_line %></td>
          <td><%= link_to 'Show', phone_device %></td>
          <td><%= link_to 'Edit', edit_phone_device_path(phone_device) %></td>
          <td><%= link_to 'Destroy', phone_device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
