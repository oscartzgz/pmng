<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Lineas telefonicas</h1>
    </div>
    <div class="col-lg-6 text-right">
      <%= link_to '+ Nueva linea telefonica', new_phone_line_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Numero</th>
        <th>Clave KEY</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @phone_lines.each do |phone_line| %>
        <tr>
          <td><%= phone_line.number %></td>
          <td><%= phone_line.SIM_key %></td>
          <td><%= link_to 'Show', phone_line %></td>
          <td><%= link_to 'Edit', edit_phone_line_path(phone_line) %></td>
          <td><%= link_to 'Destroy', phone_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
