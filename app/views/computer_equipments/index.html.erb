<div class="container">
  
  <div class="row">
    <div class="col-lg-6">
      <h1>Equipos de Cómputo</h1>
    </div>
    <div class="col-lg-6 text-right">
      <%= link_to '+ Nuevo equipo', new_computer_equipment_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Sku</th>
        <th>Valor</th>
        <th>Estado</th>
        <th>Observaciones</th>
        <th>Asignación</th>
        <th>Categoria</th>
        <th>Cantidad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @computer_equipments.each do |computer_equipment| %>
        <tr>
          <td><%= computer_equipment.brand %></td>
          <td><%= computer_equipment.model %></td>
          <td><%= computer_equipment.sku %></td>
          <td><%= computer_equipment.value %></td>
          <td><%= computer_equipment.status %></td>
          <td><%= computer_equipment.observations %></td>
          <td><%= computer_equipment.assignment %></td>
          <td><%= computer_equipment.category %></td>
          <td><%= computer_equipment.quantity %></td>
          <td><%= link_to 'Ver', computer_equipment %></td>
          <td><%= link_to 'Editar', edit_computer_equipment_path(computer_equipment) %></td>
          <td><%= link_to 'Eliminar', computer_equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
